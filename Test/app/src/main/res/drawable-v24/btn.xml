<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <stroke

                android:width="8dp"
                android:color="#111111" />
            <corners
                android:radius="30dp" />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="#D7C4BB"
                android:startColor="#6699A1"
                android:endColor="#91989F"
                android:type="linear"
                />
            <padding
                android:left="50dp"
                android:top="30dp"
                android:right="50dp"
                android:bottom="30dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:width="8dp"
                android:color="#111111" />
            <corners
                android:radius="30dp" />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="#D7C4BB"
                android:startColor="#6699A1"
                android:endColor="#91989F"
                android:type="linear"
                />
            <padding
                android:left="50dp"
                android:top="30dp"
                android:right="50dp"
                android:bottom="30dp"/>

        </shape>
    </item>
</selector>